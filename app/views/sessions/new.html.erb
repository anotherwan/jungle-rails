
<div class="container">
 <div class="row">
   <h1>Login</h1>
 </div>
</div>

<br>
<br>

<%= form_tag '/login' , class:"form-horizontal" do %>

<fieldset>

<div class="form-group">
 <label class="col-md-4 control-label" for="email">Email:</label>
   <div class="col-md-4">
     <input type="email" name="email" id="email" value="" class="form-control input-md" placeholder="Email">
   </div>
</div>

<div class="form-group">
 <label class="col-md-4 control-label" for="password">Password:</label>
   <div class="col-md-4">
     <input type="password" name="password" id="password" value="" class="form-control input-md">
   </div>
</div>

<div class="form-group">
 <label class="col-md-4 control-label" for=""></label>
   <div class="col-md-4">
     <input type="submit" name="commit" value="Login" class="btn btn-primary">
   </div>
</div>

<% end %>

</fieldset>
