
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @order.line_items.each  do |line_item| %>
    <tr>
      <td><%= image_tag line_item.product.image.tiny %></td>

      <td><%= line_item.product.name %></td>

      <td><%= line_item.product.description %></td>

      <td><%= line_item.quantity %></td>

      <td>$<%= line_item.item_price %></td>
    </tr>
    <% end %>
  </tr>
  <tr>
    <td class="order_total_price">
    <td></td>
    <td></td>
    <th>Total price:</th>
    <td>$<%= @order.total_cents/100.00 %></td>
  </tr>
  </tbody>
</table>
